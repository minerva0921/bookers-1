<h1>Editing Book</h1>

<% if flash.now[:error] %>
  <p><%= flash.now[:error] %> hoppened error</p>
<% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>

<% end %>