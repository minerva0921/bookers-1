<h3>Books</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

<tbody>
<% Book.all.each do |book| %>
  <tr> 
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
    <td>
      <%= link_to "show", book_path(book.id) %>
      <%= link_to "edit", edit_book_path(book.id) %>
      <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
  </tr>  
<% end %>

</tbody>   
</table>

<h3>New book</h3>
<!-- form_for部分 -->

<% if flash.now[:error] %>
  <p><%= flash.now[:error] %> hoppened error</p>
<% end %>

<%= form_with model: @book, url:'/books', local:true do |f| %>

  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Body</h4>
    <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>
